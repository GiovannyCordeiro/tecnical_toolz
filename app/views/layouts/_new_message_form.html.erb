<div class="form-group msg-form">
  <%= form_with(model: [@single_room, @message], remote: true, class: 'd-flex') do |f| %>
    <%= f.text_field :body, id: 'chat-text', class: 'p-1 border border-gray-200 rounded-sm focus:ring-0 w-lg', autocomplete: 'off'%>
    <%= f.submit data: { disable_with: false }, class: 'px-5 py-2 border border-gray-200 rounded-sm text-sm bg-blue-50' %>
  <% end %>
</div>
