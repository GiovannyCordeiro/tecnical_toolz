<%= form_with(model: @room, remote: true, class: 'd-flex') do |f| %>
  <%= f.text_field :name, class: 'mt-1 p-1 border border-gray-200 rounded-sm focus:ring-0 focus:outline-hidden sm:text-sm', autocomplete: 'off' %>
  <%= f.submit data: { disable_with: false }, class: "px-1 py-1 border border-gray-200 rounded-sm text-sm bg-blue-50" %>
<% end %>
