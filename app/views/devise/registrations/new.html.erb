<div class="w-full h-screen flex flex-col items-center justify-center">
  <h2 class="mb-5 text-3xl">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-2/6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full mt-1 p-1 border border-gray-200 rounded-sm focus:ring-0 focus:outline-hidden sm:text-sm' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full mt-1 p-1 border border-gray-200 rounded-sm focus:ring-0 focus:outline-hidden sm:text-sm'%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full mt-1 p-1 border border-gray-200 rounded-sm focus:ring-0 focus:outline-hidden sm:text-sm'%>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "text-lg w-full py-2 mt-8 mb-8 border border-gray-200 rounded-sm text-sm bg-blue-50" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>