<div class="w-full h-screen flex flex-col items-center justify-center">
  <h2 class="mb-5 text-3xl">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-2/6" }) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full mt-1 p-1 border border-gray-200 rounded-sm focus:ring-0 focus:outline-hidden sm:text-sm' %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full mt-1 p-1 border border-gray-200 rounded-sm focus:ring-0 focus:outline-hidden sm:text-sm'%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions my-5">
      <%= f.submit "Log in", class: "w-full py-2 border border-gray-200 rounded-sm text-sm bg-blue-50" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

