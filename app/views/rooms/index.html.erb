<div id="chatroom_container" class="w-full flex ml-12 justify-center gap-16">
  <div id="side_panel" class="mt-8">
    <h4 class="text-2xl">Users</h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    <h4 class="text-2xl mt-5">Salas</h4>
    <%= render 'layouts/new_room_form' %>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms" class="mt-3">
      <%= render @rooms %>
    </div>
  </div>
  <div id="room_container" class="w-2/5 mr-0">
    <% if @single_room %>
      <div id="single_room">
        <h4 class="text-2xl text-center "><%= @user&.email || @single_room.name %></h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages" class="overflow-x-hidden overflow-y-scroll">
          <%= render @messages %>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>